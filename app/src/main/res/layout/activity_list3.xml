<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list3">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        android:id="@+id/flipper3"/>
    <TextView
        android:layout_width="762px"
        android:layout_height="wrap_content"
        android:id="@+id/textnya"
        android:layout_below="@+id/flipper3"
        android:text="Detail"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="762px"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnya"
        android:id="@+id/text1"
        android:text="tempat ini menyediakan pemandangan pantai dan suguhan laut dan pemandahangan yang indah"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="762dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:text="Price"
        android:textStyle="bold"
        android:id="@+id/text2"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="762dp"
        android:layout_height="wrap_content"
        android:text="Rp. 700.000"
        android:layout_below="@+id/text2"
        android:textAlignment="center"
        android:textSize="20dp"/>


</RelativeLayout>